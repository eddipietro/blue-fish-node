<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=PT+Serif+Caption:ital@0;1&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <style>
        /* Estilos CSS */
        .centered-container {
            text-align: center; /* Centra horizontalmente */
            margin-top: 50px; /* Espacio superior */
            margin-bottom: 50px; /* Espacio inferior */
        }

        .centered-container h1 {
            margin: 0; /* Elimina el margen predeterminado del título */
        }

        /* Estilos CSS adicionales para los productos */
        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            justify-content: center; /* Centra la sección horizontalmente */
            padding: 20px;
        }

        .product {
            border: 1px solid #ccc;
            padding: 20px;
            text-align: center;
        }

        .product img {
            max-width: 100%;
            height: auto;
            width: 300px; /* Tamaño máximo de la imagen */
            margin-bottom: 10px;
        }

        .product h3, .product p {
            margin: 5px 0; /* Reducir el espacio entre los elementos de texto */
        }

        .quantity-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 10px;
        }

        .quantity-buttons button {
            margin: 0 5px;
            width: 30px;
            height: 30px;
            border-radius: 50%; /* Hace que los botones sean redondos */
            border: 1px solid #ccc;
            background-color: #fff;
            cursor: pointer;
            font-weight: bold;
            font-size: 18px;
        }

        .quantity {
            border: 1px solid #ccc;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-to-cart {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
        }

        @media (max-width: 380px) {
            .product img {
                width: 100%; /* Ajuste para dispositivos más pequeños */
            }
        }
    </style>
</head>
<body>
    <div class="centered-container">
        <h1>Products Page</h1>
    </div>
    <!-- Muestra la lista de productos aquí -->
    <div class="product-list">
        <% products.forEach(product => { %>
            <div class="product">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <h3><%= product.name %></h3>
                <p>Price: $<%= product.price %></p>
                <div class="quantity-buttons">
                    <button onclick="decreaseQuantity(this)">-</button>
                    <span class="quantity" contenteditable="true">1</span>
                    <button onclick="increaseQuantity(this)">+</button>
                </div>
                <button class="add-to-cart" onclick="addToCart('<%= product._id %>', '<%= product.name %>', '<%= product.price %>')">Add to Cart</button>
            </div>
        <% }); %>
    </div>

    <!-- Script para manejar la cantidad y agregar al carrito -->
    <script>
        function increaseQuantity(button) {
            var quantityElement = button.previousElementSibling;
            var value = parseInt(quantityElement.innerText);
            quantityElement.innerText = value + 1;
        }

        function decreaseQuantity(button) {
            var quantityElement = button.nextElementSibling;
            var value = parseInt(quantityElement.innerText);
            if (value > 1) {
                quantityElement.innerText = value - 1;
            }
        }

        function addToCart(productId, productName, productPrice) {
            const quantity = parseInt(document.querySelector('.quantity').innerText);
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: productId,
                    productName: productName,
                    price: productPrice,
                    quantity: quantity
                })
            }).then(response => {
                if (response.ok) {
                    window.location.href = '/cart'; // Redirige al carrito después de agregar el producto
                }
            }).catch(error => {
                console.error('Error adding to cart:', error);
            });
        }
    </script>
</body>
</html>